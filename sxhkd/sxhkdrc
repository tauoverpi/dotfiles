XF86Audio{Lower,Raise}Volume
	amixer -c 0 set PCM 10{-,+}

XF86AudioMute
	amixer set PCM 0%

XF86Audio{Prev,Next,Play,Stop}
	mpc {prev,next,toggle,stop}

super + shift + Return
	emacs -fs

super + shift + Menu
	icecat

super + Escape
	pkill -USR1 -x sxhkd

super + alt + Escape
	bspc quit

super + shift + f
	bspc node -t fullscreen

super + shift + g
	bspc node -s biggest

super + {_,Shift}Tab
	bspc node -f {next,prev}

super + {_,shift +}{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

super + {_,shift +, alt +} space
	bspc node -t {tiled, floating, fullscreen}

super + p
	dmenu_run
